{
  "name": "fieldview-live",
  "version": "0.1.0",
  "private": true,
  "description": "FieldView.Live - Monetization platform for youth sports live streaming",
  "scripts": {
    "dev": "pnpm --filter './apps/*' dev",
    "build": "pnpm db:generate && pnpm --filter './packages/*' build && pnpm --filter './apps/*' build",
    "start": "bash scripts/railway-start.sh",
    "start:api": "pnpm --filter api start",
    "start:web": "pnpm --filter web start",
    "test": "pnpm test:unit",
    "test:unit": "pnpm --filter './packages/*' test && pnpm --filter './apps/*' test:unit",
    "test:live": "pnpm --filter api test:live && pnpm --filter web test:live",
    "test:coverage": "pnpm --filter './packages/*' test:coverage && pnpm --filter './apps/*' test:coverage",
    "test:watch": "pnpm --filter './packages/*' test:watch && pnpm --filter './apps/*' test:watch",
    "lint": "pnpm --filter './packages/*' lint && pnpm --filter './apps/*' lint",
    "lint:fix": "pnpm --filter './packages/*' lint:fix && pnpm --filter './apps/*' lint:fix",
    "type-check": "pnpm --filter './packages/*' type-check && pnpm --filter './apps/*' type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm --filter './packages/*' clean && pnpm --filter './apps/*' clean",
    "db:migrate": "pnpm --filter @fieldview/data-model db:migrate",
    "db:generate": "pnpm --filter @fieldview/data-model db:generate",
    "db:studio": "pnpm --filter @fieldview/data-model db:studio",
    "openapi:validate": "pnpm exec redocly lint openapi/api.yaml",
    "openapi:generate": "openapi-typescript openapi/api.yaml -o packages/api-client/src/types/api.ts",
    "openapi:mock": "pnpm exec prism mock openapi/api.yaml"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@redocly/cli": "^2.12.6",
    "@stoplight/prism-cli": "^5.14.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "openapi-typescript": "^7.10.1",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.1.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

{
  "name": "api",
  "version": "1.2.3.006",
  "private": true,
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "scripts": {
    "dev": "dotenv -e .env -- tsx watch src/server.ts",
    "build": "tsc",
    "prestart": "pnpm build",
    "start": "node dist/server.js || node dist/src/server.js",
    "setup:prod": "tsx setup-production-db.ts",
    "db:migrate": "cd ../../packages/data-model && npx prisma migrate deploy --schema=./prisma/schema.prisma",
    "test": "pnpm test:live",
    "test:unit": "vitest run",
    "test:live": "vitest run --config vitest.live.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@fieldview/data-model": "workspace:*",
    "@fieldview/dvr-service": "workspace:*",
    "@mux/mux-node": "^12.8.1",
    "@prisma/client": "^6.0.0",
    "@sendgrid/mail": "^8.1.6",
    "@sentry/node": "^10.32.1",
    "@types/qrcode": "^1.5.6",
    "@types/speakeasy": "^2.0.10",
    "@types/twilio": "^3.19.3",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "pino": "^9.0.0",
    "pino-http": "^10.0.0",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.3.1",
    "speakeasy": "^2.0.0",
    "square": "^43.2.1",
    "twilio": "^5.10.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^1.0.4",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
